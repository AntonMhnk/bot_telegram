# Production Environment Variables for Telegram Bot

# Telegram Bot API Key
TG_BOT_API_KEY=token

# Server Port
PORT=3000

# Game API Server URL
# Bot на VPS #2, API на VPS #1 - используем публичный URL или WireGuard IP
# Вариант 1: Через домен (рекомендуется)
API_BASE_URL=https://
# Вариант 2: Через WireGuard (если настроен)
# API_BASE_URL=http://10.0.0.1:3002
# Вариант 3: Прямой IP (если нет домена)
# API_BASE_URL=http://109.73.201.57:3002

# Environment Mode
NODE_ENV=production

# Webhook URL - ОБЯЗАТЕЛЬНО для production!
# Бот будет использовать webhook вместо polling
BOT_WEBHOOK_URL=https://

# Webhook Secret Token (для безопасности)
# Раскомментируй и используй свой токен
WEBHOOK_SECRET_TOKEN=token

